{
  "version": "2.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["**/*.md", "**/test/**", "**/examples/**"],
      "ignore": ["expozr"]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": ["packages/*", "packages/adapters/*"]
}
