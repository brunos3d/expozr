{
  "version": "1.1.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/*",
    "packages/adapters/*",
    "examples/webpack/*/host",
    "examples/webpack/*/remote"
  ]
}
