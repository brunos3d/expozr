{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "2.2.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "**/*.md",
        "**/test/**",
        "**/examples/**"
      ],
      "ignore": "expozr"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/*",
    "packages/adapters/*"
  ]
}
