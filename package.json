{
  "name": "expozr",
  "version": "0.1.0",
  "description": "Universal plugin ecosystem for web bundler module federation",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/adapters/*",
    "examples/webpack/*/host",
    "examples/webpack/*/remote",
    "examples/vite/*/host",
    "examples/vite/*/remote"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "clean": "lerna clean && rm -rf node_modules",
    "version": "lerna version",
    "publish": "lerna publish",
    "dev": "lerna run dev --parallel",
    "typecheck": "lerna run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "lerna": "^7.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "ts-jest": "^29.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brunos3d/expozr.git"
  },
  "keywords": [
    "bundler",
    "webpack",
    "vite",
    "rollup",
    "plugin",
    "micro-frontend"
  ],
  "author": "Bruno Silva",
  "license": "MIT"
}
